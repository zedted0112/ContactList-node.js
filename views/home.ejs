<body>

    <h1> <i class="fas fa-address-book"></i> Contact List</h1>
<div class="container">
    <ul>
        <% for(let i of    contact_list
        ){ %>

            <li>
<div class="info-box">
    
    <p>
       <i class="fas fa-user" >   </i> <%=i.name%>
    </p>
    <p>
       </i> <%=i.phone%> <a href="/delete-contact/?phone=<%=i.phone%>&name=<%=i.name%>&id=<%=i._id%>"><i class="fas fa-trash"></i></a>
